<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Importa configuração padrão do Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Properties -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}spring.log}"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
    
    <!-- Console Appender - JSON Estruturado -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Campos customizados -->
            <customFields>{"app":"pixwallet","env":"${SPRING_PROFILES_ACTIVE:-local}"}</customFields>
            
            <!-- Incluir MDC (Mapped Diagnostic Context) -->
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>transferId</includeMdcKeyName>
            <includeMdcKeyName>endToEndId</includeMdcKeyName>
            <includeMdcKeyName>walletId</includeMdcKeyName>
            <includeMdcKeyName>eventId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>operation</includeMdcKeyName>
            
            <!-- Incluir trace IDs do OpenTelemetry -->
            <!-- Micrometer Tracing/OTel geralmente popula camelCase (traceId/spanId). Mantemos os dois para compatibilidade -->
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            
            <!-- Stack trace formatado -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
        </encoder>
    </appender>
    
    <!-- Console Appender - Legível para desenvolvimento -->
    <appender name="CONSOLE_PRETTY" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Inclui traceId/spanId no layout legível para facilitar a identificação no stdout/local -->
            <pattern>%clr(%d{yyyy-MM-dd'T'HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr([corr=%X{correlationId} trace=%X{traceId:-%X{trace_id}} span=%X{spanId:-%X{span_id}}]){yellow} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- File Appender - JSON para produção -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"pixwallet","env":"${SPRING_PROFILES_ACTIVE:-local}"}</customFields>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>transferId</includeMdcKeyName>
            <includeMdcKeyName>endToEndId</includeMdcKeyName>
            <includeMdcKeyName>walletId</includeMdcKeyName>
            <includeMdcKeyName>eventId</includeMdcKeyName>
            <includeMdcKeyName>operation</includeMdcKeyName>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
        </encoder>
    </appender>
    
    <!-- Loggers específicos -->
    <logger name="org.pix.wallet" level="DEBUG" additivity="false">
        <appender-ref ref="${CONSOLE_APPENDER:-CONSOLE_PRETTY}"/>
        <appender-ref ref="FILE_JSON"/>
    </logger>
    
    <!-- Spring Framework -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
    
    <!-- Hibernate/JPA -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="${CONSOLE_APPENDER:-CONSOLE_PRETTY}"/>
        <appender-ref ref="FILE_JSON"/>
    </root>
    
    <!-- Profiles -->
    <springProfile name="local,dev">
        <logger name="org.pix.wallet" level="DEBUG"/>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="org.pix.wallet" level="INFO"/>
        <property name="CONSOLE_APPENDER" value="CONSOLE_JSON"/>
    </springProfile>
</configuration>
